void game()
{
	int ret = 0;
	int guess = 0;
	ret = rand()%100+1;//#include<stdlib.h>生成32767之间的随机数
	//%100+1则将范围缩小到0-100之间
	//printf("%d\n", ret);
	while (1)
	{
		printf("猜数字:>");
		scanf("%d", &guess);
		if (guess > ret)
		{
			printf("猜大了\n");
		}
		else if (guess < ret)
		{
			printf("猜小了\n");
		}
		else
		{
			printf("恭喜你猜对了\n");
			break;
		}
	}
}
void menu()
{
	printf("**********************************************\n");
	printf("***********   1.play      0.exit   ***********\n");
	printf("**********************************************\n");
}
int main()
{
	int input = 0;
	srand((unsigned int)time(NULL));//#include<time.h>
	do
	{
		menu();
		
		printf("请选择>:");
		scanf("%d", &input);
		switch (input)
		{
		case 1:
			game();
				break;
		case 0:
			printf("退出游戏\n");
			break;
			default:
				printf("选择错误\n");
				break;
		}
	} while (input);
	return 0;
}
